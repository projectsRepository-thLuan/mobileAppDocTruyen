<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainCapNhat">

    <EditText
        android:id="@+id/dbtieude"
        android:layout_width="318dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="Tên truyện"
        android:inputType="text"></EditText>

    <EditText
        android:id="@+id/dbnoidung"
        android:layout_width="314dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Nội dung"
        android:inputType="text"></EditText>

    <EditText
        android:id="@+id/dbimg"
        android:layout_width="319dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Ảnh bìa"
        android:inputType="textUri"></EditText>

    <Button
        android:id="@+id/buttonCapNhat"
        android:layout_width="125dp"
        android:layout_height="83dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="10dp"
        android:text="Cập nhật"></Button>


</LinearLayout>